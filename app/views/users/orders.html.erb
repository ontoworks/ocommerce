        <div class="content_shopping_checkout">
                <img src="/images/front/customer_support.gif" />
                <br/>
                <br/>
                <h3>Orders history</h3>

  <table class="finish_shopping_table" cellpadding="0" cellspacing="0">
    <thead>
      <tr>
        <td><b> Order # </b> </td>
        <td><b> Status </b> </td>
        <td><b> Shipping Method </b> </td>
        <td><b> Shipping Cost </b> </td>
        <td><b> Payed with </b> </td>
        <td><b> Total </b> </td>
      </tr>
    </thead>
    <tbody>
      <% for o in current_user.orders %>
      <tr>
        <td><a href="<%= "/users/#{current_user.id}/orders/#{o.id}" %>"><%= o.id %></a></td>
        <td><%= o.current_status %></td>
        <td><%= o.carrier+": "+o.shipping_method %></td>
        <td>$ <%= o.shipping_approx %></td>
        <td><%= o.payment_method.capitalize %></td>
        <td>$ <%= o.total %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
