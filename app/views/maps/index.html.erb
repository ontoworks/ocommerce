<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
    <title>Google Maps JavaScript API Example</title>
<script type="text/javascript" src="http://www.google.com/jsapi?key=ABQIAAAAh8YMaQeuCHkO43E2JUvWTxRmZEcYa40z60h8S0KJXuyf8zFfuxQVDbWuw2v6vk0bEpjEk24vpn3Svg"></script>
<script type="text/javascript">
  google.load("maps", "2");
   
  // Call this function when the page has been loaded
  function load() {
    var map = new google.maps.Map2(document.getElementById("map"));
    var point = new google.maps.LatLng(6.256122, -75.578492)
    map.setCenter(point, 12);
    map.enableScrollWheelZoom();

    // control for map type
    var mapControl = new google.maps.MapTypeControl();
    map.addControl(mapControl);

    // a marker overlay
    var marker = new google.maps.Marker(point);
    //map.addOverlay(marker);
    new google.maps.Event.addListener(marker, "click", function() {
        marker.openInfoWindowHtml('<%= "<p>El nidito de munue y princi</p><br/>#{image_tag('front/munue.jpg')}" %>');
      });

    // an info window
//    map.openInfoWindowHtml(point, "<p>El nidito de munue y princi</p>");
  }
  google.setOnLoadCallback(load);
</script>


  </head>
  <body onunload="google.maps.Unload()">
    <div id="map" style="width: 700px; height: 590px"></div>
  </body>
</html>
